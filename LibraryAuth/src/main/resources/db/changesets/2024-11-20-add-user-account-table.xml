<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet id="2024-11-20-add-user-account-table" author="Maxim">
        <createTable tableName="application_user_account" remarks="Таблица с учетными записями пользователей">
            <column name="id" type="bigint" autoIncrement="true" remarks="Id учетной записи">
                <constraints primaryKey="true"/>
            </column>
            <column name="password" type="text" remarks="Пароль пользователя">
                <constraints nullable="false"/>
            </column>
            <column name="login" type="text" remarks="Логин пользователя">
                <constraints nullable="false"
                             unique="true"/>
            </column>
            <column defaultValueBoolean="true"
                    name="account_non_expired" type="boolean" remarks="Срок действия учетной записи пользователя не истек">
                <constraints nullable="false"/>
            </column>
            <column defaultValueBoolean="true"
                    name="account_non_locked" type="boolean" remarks="Учетная запись пользователя не заблокирована">
                <constraints nullable="false"/>
            </column>
            <column defaultValueBoolean="true"
                    name="credentials_non_expired" type="boolean" remarks="Срок действия сертификата пользователя не истек">
                <constraints nullable="false"/>
            </column>
            <column defaultValueBoolean="true"
                    name="enabled" type="boolean" remarks="Включен">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>